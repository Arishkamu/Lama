  Timer.o)
 (mode
  (promote (until-clean)))
 (action
  (progn
   (setenv
    SRCDIR
    ".."
    ; (setenv
    ;  FILES
    ;  "List.lama Buffer.lama Collection.lama Data.lama Fun.lama"
