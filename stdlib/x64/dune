  ../Random.lama
  ../Ref.lama
  ../STM.lama
  ../Timer.lama
  %{project_root}/src/Driver.exe)
 (targets
  List.i
  List.o
  Buffer.i
  Buffer.o
  Collection.i
  Collection.o
  Data.i
  Data.o
  Fun.i
  Fun.o
  Lazy.i
  Lazy.o
